<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RolePresentationActivity"
    android:background="@color/darkThemeColorSecondary">
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/darkThemeColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_below="@id/game_status_box"
            android:id="@+id/main_board_button_box"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/night_fragment_day_events_btn"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/darkThemeColorSecondary">
                <TextView
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/day_events"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/night_fragment_night_events_btn"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/darkThemeColorSecondary">
                <TextView
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/night_events"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/player_info_box"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/night_fragment_player_name"
                    android:text="Player Name"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/night_fragment_role_name"
                    android:text="Sample Text"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/night_fragment_player_status"
                    android:text="Status Dead"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_margin="10dp"
                android:src="@drawable/ic_bolt"
                android:rotation="-25"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/night_fragment_use_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                app:fabCustomSize="45dp"
                app:backgroundTint="@color/darkThemeColorSecondary"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_margin="10dp"
                android:src="@drawable/ic_chevron_right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end"
                android:id="@+id/night_fragment_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                app:fabCustomSize="45dp"
                app:backgroundTint="@color/darkThemeColorSecondary"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/night_fragment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>