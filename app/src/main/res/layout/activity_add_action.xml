<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActionActivity">
    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/add_action_change_role_layout"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="@string/add_action_change_role_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_weight="1"
                android:id="@+id/add_action_change_role_btn"
                android:background="@drawable/bg_start_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/add_action_change_role_btn_tv"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="@string/add" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/add_action_change_role_error_txt"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/add_action_change_role_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/add_action_target_power_layout"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="@string/add_action_target_ability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_weight="1"
                android:id="@+id/add_action_target_power_btn"
                android:background="@drawable/bg_start_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/add_action_target_power_btn_tv"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="@string/add" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/add_action_target_ability_error_txt"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/add_action_target_ability_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/add_action_change_power_layout"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="@string/add_action_change_ability_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_weight="1"
                android:id="@+id/add_action_change_power"
                android:background="@drawable/bg_start_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/add_action_change_power_btn_tv"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="@string/add" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/add_action_change_ability_to_error_txt"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/add_action_target_ability_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/add_action_reward_layout"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/add_action_reward_txt"
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/add_action_reward_et"
                android:gravity="center"
                android:textSize="20dp"
                android:padding="10dp"
                android:inputType="number"
                android:background="@drawable/bg_start_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:id="@+id/add_action_round_txt"
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="@string/rounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_action_change_role_type_layout"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/add_action_change_role_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/add_action_change_role_type_spinner"
                android:padding="10dp"
                android:background="@drawable/bg_start_game"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:backgroundTint="@android:color/white" />
</RelativeLayout>