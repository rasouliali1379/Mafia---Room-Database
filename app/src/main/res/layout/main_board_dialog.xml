<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/eliminations_dialog_actionbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_board_dialog_title"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Title"/>
        <ImageButton
            android:id="@+id/eliminations_dialog_close_btn"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/eliminations_dialog_actionbar"
        android:id="@+id/eliminations_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/no_elimination_sign"
        android:text="@string/nothing_found"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
</RelativeLayout>