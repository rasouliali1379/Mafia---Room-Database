<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/darkThemeColorSecondary"
    android:id="@+id/events_dialog_root_layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/events_layout_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorHeight="4dp"
        app:tabBackground="@color/darkThemeColorPrimary"
        app:tabMode="fixed"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/events_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>