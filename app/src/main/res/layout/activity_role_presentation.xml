<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RolePresentationActivity">
    <androidx.cardview.widget.CardView
        android:layout_weight="2"
        app:cardCornerRadius="30dp"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/role_presentation_main_container"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/role_presentation_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="Player name : Sample Name"
                    android:textSize="25dp"/>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/role_presentation_role_name"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center"
                    android:layout_below="@id/role_presentation_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Role : Smaple Role"
                    android:textStyle="bold"
                    android:textSize="30dp"/>
                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/role_presentation_role_desc"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_below="@id/role_presentation_role_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Role : Smaple Role desc"
                    android:textSize="20dp"/>
            </RelativeLayout>
            <TextView
                android:textSize="20dp"
                android:visibility="visible"
                android:id="@+id/role_presentation_cover"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_reveal"/>
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_chevron_left"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/role_presentation_previous_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="45dp"
                    app:backgroundTint="@android:color/white"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:id="@+id/role_presentation_next_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="45dp"
                    app:backgroundTint="@android:color/white"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="3"
        android:id="@+id/role_presentation_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>